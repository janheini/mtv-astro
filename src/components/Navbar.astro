---
import NavbarContent from "./NavbarContent.astro";
---

<div class="drawer drawer-end">
  <input id="drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <div class="navbar border border-y-neutral-200">
      <label for="drawer" class="btn btn-ghost drawer-button lg:hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-8 w-8"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </label>
      <NavbarContent class="menu menu-horizontal hidden text-lg lg:flex" />
    </div>
  </div>
  <div class="drawer-side">
    <label for="drawer" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <NavbarContent
      class="menu min-h-full w-2/3 break-normal rounded-l-sm bg-base-100 text-lg"
    />
  </div>
</div>
